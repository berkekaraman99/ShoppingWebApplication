<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoppingWebApplication</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoppingWebApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light nav-bg border-bottom box-shadow mb-3 fixed-top"
        style="padding-left: 2rem; padding-right: 2rem"
        >
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShoppingWebApplication</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a asp-controller="Categories" asp-action="TShirt" asp-area="" class="dropdown-item" >T-Shirt</a></li>
                                <li><a asp-controller="Categories" asp-action="Short" asp-area="" class="dropdown-item" >Short</a></li>
                                <li><a asp-controller="Categories" asp-action="Jeans" asp-area="" class="dropdown-item" >Jeans</a></li>
                                <li><a asp-controller="Categories" asp-action="Trousers" asp-area="" class="dropdown-item" >Trousers</a></li>
                                <li><a asp-controller="Categories" asp-action="Coat" asp-area="" class="dropdown-item" >Coat</a></li>
                                <li><a asp-controller="Categories" asp-action="Sweatshirt" asp-area="" class="dropdown-item" >Sweatshirt</a></li>
                                <li><a asp-controller="Categories" asp-action="Sweater" asp-area="" class="dropdown-item" >Sweater</a></li>
                                <li><a asp-controller="Categories" asp-action="Jacket" asp-area="" class="dropdown-item" >Jacket</a></li>
                                <li><a asp-controller="Categories" asp-action="Waistcoat" asp-area="" class="dropdown-item" >Waistcoat</a></li>
                                <li><a asp-controller="Categories" asp-action="Tracksuit" asp-area="" class="dropdown-item" >Tracksuit</a></li>
                                <li><a asp-controller="Categories" asp-action="Shirt" asp-area="" class="dropdown-item" >Shirt</a></li>
                                <li><a asp-controller="Categories" asp-action="Suit" asp-area="" class="dropdown-item" >Suit</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Lorem ipsum</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="ShowSearchForm">Search</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="bg-image"></div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ShoppingWebApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
